<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    ​
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        ​
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src = "@drawable/search"/>
        ​
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="어떤 곳을 찾고 싶으신가요?"
            android:textColor="#000000"
            android:fontFamily="@font/ridibatang"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />
        ​
    </LinearLayout>
    ​
    <Spinner
        android:id="@+id/select_place_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/place_type_array"
        android:layout_margin="16dp" />
    ​
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        ​
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src = "@drawable/search"/>
        ​
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="어디까지 찾을까요?"
            android:textColor="#000000"
            android:fontFamily="@font/ridibatang"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />
        ​
    </LinearLayout>
    ​
    <EditText
        android:id="@+id/place_search_bound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="단위 : m"
        android:fontFamily="@font/ridibatang"
        android:inputType="number" />
    ​
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        ​
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text = "찾기"
            android:background="@drawable/round_button"
            android:id="@+id/place_type_search"
            android:fontFamily="@font/baemin"
            android:layout_margin="10dp"/>
        ​
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text = "취소"
            android:background="@drawable/round_button"
            android:id="@+id/place_type_close"
            android:fontFamily="@font/baemin"
            android:layout_margin="10dp"/>
        ​
    </LinearLayout>
    ​
</LinearLayout>